    Private Sub Button1_Click(ByVal sender As System.Object, ByVal e As System.EventArgs) Handles cmdMC.Click

        If txtDisplay.Text = 0 Or flagChecker = "0" Then
            txtDisplay.Text = "MC"

        Else
            txtDisplay.Text = txtDisplay.Text + "MC"
        End If

